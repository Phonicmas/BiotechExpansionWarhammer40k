<Defs>

  <!-- Doombolt -->

  <VFECore.Abilities.AbilityDef ParentName="VPE_PsycastBase">
    <defName>40KPSY_Doombolt</defName>
    <label>doombolt</label>
    <description>A bolt made of raw chaos energy are launched by the psyker against his enemies. Made from dark energy of the coalesced spite and loathing of the psyker.</description>
    <iconPath>Abilities/ChaosPsyker/Doombolt</iconPath>
    <abilityClass>VFECore.Abilities.Ability_ShootProjectile</abilityClass>
    <castTime>20</castTime>
    <range>30</range>
    <radius>1</radius>
    <showUndrafted>false</showUndrafted>
    <targetMode>Pawn</targetMode>
    <castSound>40KPSY_Doombolt</castSound>
    <rangeStatFactors>
      <PsychicSensitivity>1</PsychicSensitivity>
    </rangeStatFactors>
    <modExtensions>
      <li Class="VanillaPsycastsExpanded.AbilityExtension_Psycast">
        <path>40KPSY_ChaosPsyker</path>
        <level>1</level>
        <order>1</order>
        <psyfocusCost>0.03</psyfocusCost>
        <entropyGain>18</entropyGain>
      </li>
      <li Class="VFECore.Abilities.AbilityExtension_Projectile">
        <projectile>40KPSY_Doombolt</projectile>
      </li>
    </modExtensions>
  </VFECore.Abilities.AbilityDef>

