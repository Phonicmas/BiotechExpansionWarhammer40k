<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Initiate Progenoid Growth -->

    <RecipeDef ParentName="SurgeryFlesh">
        <defName>BEWH_InitiateProgenoidGrowth</defName>
        <label>initiate progenoid growth</label>
        <description>Initiate growth in progenoid glands, allowing them to generate germ cells for future making of new gene-seeds.</description>
        <workerClass>GeneProgenoid.GeneProgenoidWorkerClass</workerClass>
        <jobString>???</jobString>
        <workAmount>1500</workAmount>
        <hideBodyPartNames>true</hideBodyPartNames>
        <addsHediff>BEWH_ProgenoidGlandsGrowth</addsHediff>
        <targetsBodyPart>false</targetsBodyPart>
        <surgerySuccessChanceFactor>2</surgerySuccessChanceFactor>
        <modExtensions>
            <li Class="GeneProgenoid.GeneProgenoidDefExtension">
                <requiredGeneAny>BEWH_ProgenoidGlands</requiredGeneAny>
            </li>
        </modExtensions>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Medicine</li>
            </categories>
        </fixedIngredientFilter>
    </RecipeDef>

    <!-- Remove Progenoid Cells -->

    <RecipeDef ParentName="SurgeryFlesh">
        <defName>BEWH_RemoveProgenoidCells</defName>
        <label>remove cells from progenoid glands</label>
        <description>???</description>
        <workerClass>GeneProgenoid.GeneProgenoidRemovalWorkerClass</workerClass>
        <jobString>???</jobString>
        <successfullyRemovedHediffMessage>{0} has successfully removed {1}'s progenoid gland cells.</successfullyRemovedHediffMessage>
        <workAmount>1500</workAmount>
        <hideBodyPartNames>true</hideBodyPartNames>
        <removesHediff>BEWH_ProgenoidGlandsGrowth</removesHediff>
        <targetsBodyPart>false</targetsBodyPart>
        <surgerySuccessChanceFactor>2</surgerySuccessChanceFactor>
        <modExtensions>
            <li Class="GeneProgenoid.GeneProgenoidDefExtension">
                <requiredGeneAny>BEWH_ProgenoidGlands</requiredGeneAny>
                <requriedSeverity>0.999</requriedSeverity>
            </li>
        </modExtensions>
        <ingredients Inherit="False">
            <li>
                <filter>
                    <thingDefs>
                        <li>MedicineIndustrial</li>
                    </thingDefs>
                </filter>
                <count>2</count>
            </li>
        </ingredients>
    </RecipeDef>

</Defs>
