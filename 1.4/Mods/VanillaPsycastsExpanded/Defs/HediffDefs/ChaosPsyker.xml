<Defs>

	<!-- Warptime -->

	<HediffDef ParentName="PsycastHediffBase">
		<defName>BEWH_Warptime</defName>
		<label>warptime</label>
		<description>Psychically induced agility reflexes, greatly increasing ranged hit, melee hit and melee dodge chance.</description>
		<stages>
			<li>
				<statFactors>
					<MeleeHitChance>2</MeleeHitChance>
					<MeleeDodgeChance>2</MeleeDodgeChance>
